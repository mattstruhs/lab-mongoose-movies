<h2>Edit Celeb</h2>

<form action="/celebrities/{{id}}/edit" method="post">
    <label for="name">
        Name
    </label>
    <input type="text" name="name" value={{name}}>
    <label for="occupation">
        occupation
    </label>
    <input type="text" name="occupation" value={{occupation}}>
    <label for="catchphrase">
        catchphrase
    </label>
    <input type="text" name="catchphrase" value={{catchphrase}}>
    <button type="submit">Edit a Celeb</button>
</form>